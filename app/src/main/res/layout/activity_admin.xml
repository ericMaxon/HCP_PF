<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkBackground"
    tools:context=".Activities.AdminActivity">

    <include
        android:id="@+id/include_perfil_admin"
        layout="@layout/layout_perfil_usuario" />

    <RelativeLayout
        android:id="@+id/rl_admin_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_perfil_admin">

        <TextView
            android:id="@+id/txt_admin_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteTextColor"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="Panel administrativo"></TextView>

        <EditText
            android:id="@+id/edt_admin_filtro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/txt_admin_titulo"></EditText>

        <ListView
            android:id="@+id/ls_admin_estudiantes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/edt_admin_filtro"
            android:layout_marginHorizontal="20dp"></ListView>

    </RelativeLayout>

</RelativeLayout>
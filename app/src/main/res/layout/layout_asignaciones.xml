<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/listviewContent">


    <TextView
        android:id="@+id/txt_asignaciones_asignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:text="[Codigo] - Asignatura"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/txt_asignaciones_grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_asignaciones_asignatura"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:text="Grupo"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/txt_asignaciones_semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_asignaciones_asignatura"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:text="Semestre"
        android:textSize="15dp"></TextView>

</RelativeLayout>
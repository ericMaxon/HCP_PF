<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#1F618D"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_perfil_imagen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/user_dp"
        app:civ_border_color="@color/imageBorderColor"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/txt_perfil_nombre"
        style="@style/headerText"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/img_perfil_imagen"
        android:text="Nombre Apellido"
        android:textAlignment="textStart"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_perfil_correo"
        style="@style/headerTextPrimary"
        android:layout_below="@id/txt_perfil_nombre"
        android:layout_marginHorizontal="5dp"
        android:layout_toRightOf="@id/img_perfil_imagen"
        android:text="Correo"
        android:textAlignment="textStart"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_perfil_ajustes"
        style="@style/viewParent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/ic_more"
        android:onClick="ajustes_perfil"/>

</RelativeLayout>